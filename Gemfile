source 'http://rubygems.org'

group :staging, :production do
  gem 'activerecord'
  gem 'nokogiri'
  gem 'rake'
end

group :development, :test do
  gem 'capybara'
  gem 'coveralls', require: false
  gem 'rspec'
  gem 'rspec-core'
  gem 'rspec-expectations'
  gem 'rspec-mocks'
  gem 'simplecov'
  gem 'simplecov-html'
  gem 'webmock'
end

